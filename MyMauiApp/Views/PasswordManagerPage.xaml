<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.Views.PasswordManagerPage"
             Title="Passwords">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Botones con scroll horizontal -->
        <ScrollView Grid.Row="0" 
            Orientation="Horizontal" 
            Margin="0,0,0,10"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
            <HorizontalStackLayout Spacing="10">
                <Button Text="Descargar" 
                ImageSource="icon_download_512.png"
                Command="{Binding DownloadCommand}"
                BackgroundColor="#2196F3"
                TextColor="White"
                HeightRequest="50"
                ContentLayout="Left,10"/>
                <Button Text="Desencriptar"
                ImageSource="icon_bosskey_512.png"
                Command="{Binding DecryptCommand}"
                BackgroundColor="#FF9800"
                TextColor="White"
                HeightRequest="50"
                ContentLayout="Left,10"/>
                <Button Text="Registrar Key" 
                ImageSource="icon_eye_shield_512.png"
                Command="{Binding RegisterKeyCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HeightRequest="50"
                ContentLayout="Left,10"/>
                <Button Text="Crear Nuevo" 
                ImageSource="icon_add_512.png"
                Command="{Binding CreateCommand}"
                BackgroundColor="#9C27B0"
                TextColor="White"
                HeightRequest="50"
                ContentLayout="Left,10"/>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- SearchBar -->
        <SearchBar Grid.Row="1" 
                Placeholder="Buscar..."
                Text="{Binding SearchText}"
                Margin="0,0,0,10"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"/>

        <!-- CollectionView -->
        <CollectionView Grid.Row="2" 
                ItemsSource="{Binding PasswordList}"
                x:Name="PasswordCollectionView"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="LightGray" CornerRadius="8">
                        <VerticalStackLayout>

                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" 
                               Text="{Binding Data01}" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="â–¼" FontSize="12"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnItemTapped"/>
                                </Grid.GestureRecognizers>
                            </Grid>

                            <VerticalStackLayout x:Name="DetailsSection" 
                                       IsVisible="False" 
                                       Spacing="8" 
                                       Margin="0,10,0,0">

                                <Label Text="{Binding Data_Id, StringFormat='ID: {0}'}" 
                               FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding Data02, StringFormat='Data02: {0}'}" FontSize="14"/>
                                <Label Text="{Binding Data03, StringFormat='Data03: {0}'}" FontSize="14"/>

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                    <Button Text="Editar" 
                                    Clicked="OnEditClicked"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"/>
                                    <Button Text="Eliminar" 
                                    Clicked="OnDeleteClicked"
                                    BackgroundColor="#F44336"
                                    TextColor="White"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="3" 
                          IsRunning="{Binding IsBusy}" 
                          IsVisible="{Binding IsBusy}"/>

        <!--<Label Grid.Row="4" Text="{Binding IsBusy, StringFormat='IsBusy: {0}'}" TextColor="Red" FontSize="20"/>-->
    </Grid>
    
</ContentPage>