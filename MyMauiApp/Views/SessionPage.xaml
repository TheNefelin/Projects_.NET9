<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyMauiApp.ViewModels"
             x:DataType="vm:SessionViewModel"
             x:Class="MyMauiApp.Views.SessionPage"
             Title="Session">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Border Padding="15" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Tiempo Restante" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="{Binding TimeRemaining}" FontSize="32" TextColor="Red" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Border Padding="15" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="User ID" FontAttributes="Bold"/>
                    <Label Text="{Binding UserId}" FontSize="12"/>
                </VerticalStackLayout>
            </Border>

            <Border Padding="15" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Role" FontAttributes="Bold"/>
                    <Label Text="{Binding Role}"/>
                </VerticalStackLayout>
            </Border>

            <Border Padding="15" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="SQL Token" FontAttributes="Bold"/>
                    <Label Text="{Binding SqlToken}" FontSize="10" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <Border Padding="15" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="API Token" FontAttributes="Bold"/>
                    <Label Text="{Binding ApiToken}" FontSize="10" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>