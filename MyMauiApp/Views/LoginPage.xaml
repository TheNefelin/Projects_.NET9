<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyMauiApp.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="MyMauiApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">

    <Grid Padding="20" RowDefinitions="*,Auto,Auto,Auto,Auto,Auto,Auto,*">

        <Label Grid.Row="1" 
               Text="Bienvenido" 
               FontSize="32" 
               HorizontalOptions="Center" 
               Margin="0,0,0,40"/>

        <Entry Grid.Row="2" 
               Placeholder="Email" 
               Text="{Binding Email}"
               Keyboard="Email"
               Margin="0,10"/>

        <Entry Grid.Row="3" 
               Placeholder="Password" 
               Text="{Binding Password}"
               IsPassword="True"
               Margin="0,10"/>

        <Label Grid.Row="4" 
               Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}"
               Margin="0,10"/>

        <Button Grid.Row="5" 
                Text="Iniciar SesiÃ³n" 
                Command="{Binding LoginCommand}"
                Margin="0,20"/>

        <ActivityIndicator Grid.Row="6" 
                          IsRunning="{Binding IsBusy}" 
                          IsVisible="{Binding IsBusy}"/>
    </Grid>
    
</ContentPage>