<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.Views.CreateEditPasswordPage"
             Title="CreateEditPasswordPage">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Servicio" FontAttributes="Bold"/>
            <Entry x:Name="Data01Entry" Placeholder="Ingresa Servicio"/>

            <Label Text="Usuario" FontAttributes="Bold"/>
            <Entry x:Name="Data02Entry" Placeholder="Ingresa Usuario"/>

            <Label Text="Contraseña" FontAttributes="Bold"/>
            <Entry x:Name="Data03Entry" Placeholder="Ingresa Contraseña"/>

            <Label Text="Clave de Encriptacion" FontAttributes="Bold"/>
            <Entry x:Name="Data04Entry" Placeholder="Ingresa Clave de Encriptacion"/>

            <Label x:Name="ErrorLabel" 
                   TextColor="Red" 
                   IsVisible="False"/>

            <Button Text="Guardar" 
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Margin="0,20,0,0"/>

            <Button Text="Cancelar" 
                    Clicked="OnCancelClicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>